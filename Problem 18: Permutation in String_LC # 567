from collections import Counter
class Solution:
    def checkInclusion(self, s1: str, s2: str) -> bool:
        len1, len2 = len(s1), len(s2)
        if len1 > len2:
            return False

        s1_count = Counter(s1)
        window_count = Counter()

        for i in range(len2):
            # Add current char to the window
            window_count[s2[i]] += 1

            # Remove char that's leaving the window
            if i >= len1:
                out_char = s2[i - len1]
                window_count[out_char] -= 1
                if window_count[out_char] == 0:
                    del window_count[out_char]

            # Compare window with s1_count
            if window_count == s1_count:
                return True

        return False
