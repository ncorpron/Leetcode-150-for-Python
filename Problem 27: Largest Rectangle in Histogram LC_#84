class Solution:
    def largestRectangleArea(self, heights: list[int]) -> int:
        stack = []  # # Stack to store indices of increasing bar heights
        max_area = 0  # # Max rectangle area
        n = len(heights)

        # # Iterate through all bars + one extra sentinel
        for i in range(n + 1):
            current_height = 0 if i == n else heights[i]
            
            # # Pop from stack while current bar is smaller
            while stack and current_height < heights[stack[-1]]:
                h = heights[stack.pop()]  # # Height of rectangle
                w = i if not stack else i - stack[-1] - 1  # # Width of rectangle
                max_area = max(max_area, h * w)  # # Update max area
            
            stack.append(i)  # # Push current index
        
        return max_area
